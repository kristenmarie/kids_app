<% if @user %>
  <div class="home">
    <h2>Welcome <%= @user %>!</h2>
    <h3>Your score is: </h3>
    <h3><%= @current_user.score %></h3>
  </div>
<% end %>

<% if !@user %>
  <div class="row login">
    <div class="col-md-6">
      <form action="/login" method="post">
      <h3>Existing User:</h3>
        <div class="form-group">
          <label for="username">Username:</label>
          <input type="text" name="username" class="form-control" placeholder="Username" required>
        </div>
        <div class="form-group">
          <label for="password">Password:</label>
          <input type="password" name="password" class="form-control" placeholder="Password" required>
        </div>
        <button type="submit" name="button" class="btn btn-primary">Login</button>
      </form>
    </div>

    <div class="col-md-6">
      <form action="/create-user" method="post">
        <h3>Create Account:</h3>
        <div class="form-group">
          <label for="username">Username:</label>
          <input type="text" name="username" class="form-control" placeholder="Password" required>
        </div>
        <div class="form-group">
          <label for="password">Password:</label>
          <input type="password" name="password" class="form-control" placeholder="Username" required>
        </div>
        <button type="submit" name="button" class="btn btn-primary">Create Account</button>
      </form>
    </div>
  </div>


<% else %>
  <center><form action="/logout" method="post">
    <button type="submit" name="button" class="btn">Log Out</button>
  </form>
  <!-- buttons for other games --><br>
  <h3>Choose a game:</h3>
  <button type="submit" name="button" class="btn"><a href="/letters">Letters</a></button>
  <button type="submit" name="button" class="btn"><a href="/number1">Numbers</a></button>
  <button type="submit" name="button" class="btn"><a href="/color1">Colors</a></button></center>
<% end %>
