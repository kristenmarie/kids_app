<% if @user %>
  <div class="home">
    <h2>Welcome <%= @user %>!</h2>
    <button type="button" name="button" class="btn"><a href="/progress/<%= @current_user.id %>">Check Your Progress</a></button>
    <h3>Your score is:</h3>
    <h3> &#9734; <%= @current_user.score %> &#9734;</h3>
  </div>
<% end %>

<% if !@user %>
  <div class="row login">
    <div class="col-md-6">
      <form action="/login" method="post">
      <h3>Existing User:</h3>
        <div class="form-group">
          <label for="username">Username:</label>
          <input type="text" name="username" class="form-control" placeholder="Username" required>
        </div>
        <div class="form-group">
          <label for="password">Password:</label>
          <input type="password" name="password" class="form-control" placeholder="Password" required>
        </div>
        <button type="submit" name="button" class="btn btn-primary">Login</button>
      </form>
    </div>

    <div class="col-md-6">
      <form action="/create-user" method="post">
        <h3>Create Account:</h3>
        <div class="form-group">
          <label for="username">Username:</label>
          <input type="text" name="username" class="form-control" placeholder="Password" required>
        </div>
        <div class="form-group">
          <label for="password">Password:</label>
          <input type="password" name="password" class="form-control" placeholder="Username" required>
        </div>
        <label for="age">Age:</label>
        <input type="age" name="age" class="form-control" placeholder="Age" required> <br>
        <button type="submit" name="button" class="btn btn-primary">Create Account</button>
      </form>
    </div>
  </div>

<% else %>
  <center><form action="/logout" method="post">
    <button type="submit" name="button" class="btn">Log Out</button>
  </form>
  <br>
  <img src="../img/penguins.png" alt="">
  <h3>Choose a game:</h3>
  <% if @current_user.age <= 6 %>
    <div class="row">
      <div class="col-md-4">
        <button type="submit" name="button" class="btn"><a href="/letters">Letters</a></button><br><br>
        <img src="../img/abc.jpg" class="front">
      </div>
      <div class="col-md-4">
        <button type="submit" name="button" class="btn"><a href="/number1">Numbers</a></button><br><br>
        <img src="../img/123.jpg" class="front">
      </div>
      <div class="col-md-4">
        <button type="submit" name="button" class="btn"><a href="/color1">Colors</a></button><br><br>
        <img src="../img/color.jpg" class="front">
      </div>
    <% else %>
    <div class="row">
      <div class="col-md-4">
        <button type="submit" name="button" class="btn"><a href="/math1">Basic Math</a></button><br><br>
        <!-- <img src="../img/abc.jpg" class="front"> -->
      </div>
      <div class="col-md-4">
        <button type="submit" name="button" class="btn"><a href="/spelling1">Spelling</a></button><br><br>
        <!-- <img src="../img/123.jpg" class="front"> -->
      </div>
      <div class="col-md-4">
        <button type="submit" name="button" class="btn"><a href="/science1">Animal Science</a></button><br><br>
        <!-- <img src="../img/color.jpg" class="front"> -->
      </div>
    <% end %>
  </div></center>

<% end %>
